# Run `ghostty +show-config --default --docs` to view a list of
# all available config options and their default values.
#
# Additionally, each config option is also explained in detail
# on Ghostty's website, at https://ghostty.org/docs/config.

# Config syntax crash course
# # Spacing around the equals sign does not matter.
# # All of these are identical:
# key=value
# key= value
# key =value
# key = value

# # Empty values are used to reset config keys to default.
# key =
#
# # Some config options have unique syntaxes for their value,
# # which is explained in the docs for that config option.
# # Just for example:
# resize-overlay-duration = 4s 200ms

theme = Catppuccin Frappe
# custom-shader = shaders/bettercrt.glsl
custom-shader = shaders/cursor_blaze.glsl

clipboard-paste-protection = false
shell-integration-features = cursor, sudo, title
# font
font-family = ""
font-family = "Maple Mono NF CN"
# font-family = "JetBrainsMono Nerd Font"
# font-family = Source Code Pro
# font-family = WenQuanYi Micro Hei
# font-size = 16
font-synthetic-style = false
font-thicken = false
font-feature = "+calt, cv01"

# 移动
keybind = alt+up=jump_to_prompt:-1
keybind = alt+down=jump_to_prompt:1
keybind = alt+page_up=scroll_page_up
keybind = alt+page_down=scroll_page_down
keybind = alt+c=clear_screen

# config
keybind = alt+shift+,=reload_config

# 窗口管理
keybind = alt+n=new_window
keybind = alt+t=new_tab
keybind = alt+shift+w=close_window
keybind = alt+w=close_surface
keybind = alt+enter=toggle_fullscreen
keybind = alt+shift+enter=toggle_split_zoom

keybind = alt+d=new_split:down
keybind = alt+shift+d=new_split:right

keybind = alt+k=goto_split:up
keybind = alt+j=goto_split:down
keybind = alt+h=goto_split:left
keybind = alt+l=goto_split:right

keybind = alt+shift+k=resize_split:up,20
keybind = alt+shift+j=resize_split:down,20
keybind = alt+shift+h=resize_split:left,20
keybind = alt+shift+l=resize_split:right,20
keybind = alt+shift+0=equalize_splits

# 大小调整
keybind = alt+equal=increase_font_size:1
keybind = alt+minus=decrease_font_size:1
keybind = alt+0=reset_font_size


# padding
window-padding-x=0
window-padding-y=0
# window-decoration = false
window-padding-balance = true
macos-titlebar-style = transparent
window-step-resize=true
confirm-close-surface=false

############################################################
# 禁用所有 super 开头的快捷键
keybind = super+ctrl+left_bracket=unbind
keybind = super+ctrl+right_bracket=unbind
keybind = super+ctrl+shift+j=unbind
keybind = super+ctrl+shift+up=unbind
keybind = super+ctrl+shift+left=unbind
keybind = super+ctrl+shift+down=unbind
keybind = super+ctrl+shift+right=unbind

# 禁用 ctrl+alt+方向键 的快捷键
keybind = ctrl+alt+down=unbind
keybind = ctrl+alt+left=unbind
keybind = ctrl+alt+right=unbind
keybind = ctrl+alt+up=unbind
keybind = ctrl+alt+shift+j=unbind

# 禁用 Ctrl+Shift+方向键和翻页键的快捷键
keybind = ctrl+shift+page_down=unbind
keybind = ctrl+shift+page_up=unbind
keybind = ctrl+shift+left=unbind
keybind = ctrl+shift+right=unbind

# 禁用 Ctrl+基础键 的快捷键
keybind = ctrl+equal=unbind
keybind = ctrl++=unbind
keybind = ctrl+,=unbind
keybind = ctrl+-=unbind
keybind = ctrl+0=unbind
keybind = ctrl+enter=unbind
keybind = ctrl+tab=unbind
keybind = ctrl+insert=unbind
keybind = ctrl+page_down=unbind
keybind = ctrl+page_up=unbind

# 禁用 Shift+基础键 的快捷键
keybind = shift+end=unbind
keybind = shift+home=unbind
keybind = shift+insert=unbind
keybind = shift+page_down=unbind
keybind = shift+page_up=unbind
keybind = shift+down=unbind
keybind = shift+left=unbind
keybind = shift+right=unbind
keybind = shift+up=unbind

# 禁用 Ctrl+Shift+基础键 的快捷键
keybind = ctrl+shift+,=unbind
keybind = ctrl+shift+enter=unbind
keybind = ctrl+shift+tab=unbind
keybind = ctrl+shift+a=unbind
keybind = ctrl+shift+e=unbind
keybind = ctrl+shift+i=unbind
keybind = ctrl+shift+j=unbind
keybind = ctrl+shift+n=unbind
keybind = ctrl+shift+o=unbind
keybind = ctrl+shift+p=unbind
keybind = ctrl+shift+q=unbind
keybind = ctrl+shift+t=unbind
keybind = ctrl+shift+w=unbind
